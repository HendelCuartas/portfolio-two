.Home
    position relative
    size 100vw 100vh
    color white
    display flex
    align-items center

.Home-container
    size 100% 500px
    padding 0 50px
    display flex
    justify-content center
    text-align center
    flex-direction column

.Home-title
    font-size 30px
    font-family 'Krona One', sans-serif
    +above(rupture.scale[3])
        font-size 40px

.Home-subtitle
    font-size 14px
    font-family 'Poppins', sans-serif
    white-space pre-wrap
    +above(rupture.scale[3])
        font-size 18px

.Home-subtitleBold
    font-weight 700